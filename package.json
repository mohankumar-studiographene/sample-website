{
  "name": "studiographene-react-csr-boilerplate",
  "version": "1.0.0",
  "description": "react csr boilerplate",
  "main": "index.html",
  "scripts": {
    "start": "webpack serve --config webpack.dev.config.js",
    "build": "webpack --config webpack.prod.config.js",
    "serve": "npm run build && npx serve -s ./build -l 80",
    "format": "prettier --write --ignore-path .gitignore \"**/*.+(ts|tsx|css|html)\"",
    "lint": "eslint src/ --fix --color  --ignore-path .gitignore",
    "jest": "jest --coverage",
    "jest:watch": "jest --watchAll",
    "pre-commit-lint": "lint-staged && jest --coverage"
  },
  "author": "SG",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "classnames": "^2.3.2",
    "html-webpack-plugin": "^5.5.0",
    "million": "^2.6.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-loading-skeleton": "^3.1.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.7.2",
    "react-table": "^7.8.0",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/runtime": "^7.18.9",
    "@commitlint/config-conventional": "^18.6.0",
    "@redux-devtools/extension": "^3.3.0",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.4.3",
    "ajv": "^8.12.0",
    "assert": "^2.0.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "commitlint": "^18.6.0",
    "copy-webpack-plugin": "^12.0.2",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "dotenv": "^16.4.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "https-browserify": "^1.0.0",
    "husky": "^9.0.10",
    "jest": "^29.4.2",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.4.2",
    "lint-staged": "^15.2.1",
    "mini-css-extract-plugin": "^2.6.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss-loader": "^8.1.0",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.2.4",
    "process": "^0.11.10",
    "sass": "^1.57.1",
    "sass-loader": "^14.1.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.6",
    "url": "^0.11.0",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-lint && npx validate-branch-name",
      "commit-msg": "npx --no -- commitlint --edit"
    }
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop|uat){1}$|^(feature|bugfix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}",
    "errorMsg": "Please follow the branch naming convention, eg: feature/SG-1"
  }
}
